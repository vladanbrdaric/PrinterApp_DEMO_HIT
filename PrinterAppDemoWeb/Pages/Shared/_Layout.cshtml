<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @*Test - Refresh page after 5 seconds*@
    @*<meta http-equiv="refresh" content="5" />*@


    @*<title>@ViewData["Title"] - PrinterApp</title>*@
    <title>Printer application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .onHover {
            margin-top: 20px;
            text-decoration: none;
            margin-right: 22px;
            font-weight: bold;
            font-size: 25px;
            color: white;
            font-family: Bahnschrift;
        }

        .onHover:hover{
            font-weight: 900;

        }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark onHover" asp-area="" asp-page="/Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark onHover" asp-area="" asp-page="/AddNewPrinter">ADD PRINTER</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark onHover" asp-area="" asp-page="/Status">CHECK STATUS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark onHover" asp-area="" asp-page="/CICD">CI / CD</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Printer Application DEMO by Vladan Brdaric / 2021<a asp-area="" asp-page="/Privacy"></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>